  <%= stylesheet_link_tag  "application", "bootstrap", "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", "bootflat", "bootflat-extensions",  "bootflat-square", :media => "all" %>

	  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
